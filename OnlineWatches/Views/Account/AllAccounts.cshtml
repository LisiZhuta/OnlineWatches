@model IEnumerable<ApplicationUser>


<h2>All Accounts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            @* <th>Role</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
               @*  <td>@user.RoleName</td> *@
                <td>
                    <form method="post" asp-action="DeleteUser" asp-controller="Account">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
