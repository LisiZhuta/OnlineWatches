@model OnlineWatches.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="Checkout" asp-asp-controller="Cart" method="post">
    <!-- Customer's Personal Information -->
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" asp-for="Name" placeholder="Your Name" required>
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" asp-for="Address" placeholder="Your Address" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" asp-for="Email" placeholder="Your Email" required>
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" asp-for="Phone" placeholder="Your Phone Number" required>
    </div>

    <!-- Credit Card Information -->
    <h3>Payment Information</h3>
    <div>
        <label for="cardNumber">Card Number:</label>
        <input type="text" id="cardNumber" asp-for="CardNumber" placeholder="Card Number" required>
    </div>
    <div>
        <label for="expiryDate">Expiry Date:</label>
        <input type="text" id="expiryDate" asp-for="ExpiryDate" placeholder="MM/YY" required>
    </div>
    <div>
        <label for="cvc">CVC:</label>
        <input type="text" id="cvc" asp-for="CVC" placeholder="CVC" required>
    </div>

    <button type="submit" class="btn btn-primary">Complete Purchase</button>
</form>
